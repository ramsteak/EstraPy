# version: 1.0.0
% clearlog

batchin -E energyc -I dif_ic0 dif_ic1 dif_ic2 x_ch1_roi1..x_ch13_roi1

filein data/* -b -f -T
  --var batch 1

align c2.s5.d2.i2.Z -E 24350 -d 3
edge c2.s5.d2.i2.Z

preedge .. -50 -l
postedge 3k .. -cde

fourier 3k 12k 6A 0.02A -w2 -k2
  -a hann

phase correct

plot x(E)
  --xlabel "Energy (eV)"
  --ylabel "$\mu(E)$"


plot x(k)
  --xlabel "Wavevector (k)"
  --ylabel "$\mu(k)$"
